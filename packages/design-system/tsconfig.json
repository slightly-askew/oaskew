{
  "compilerOptions": {
    "rootDirs": ["src", "stories"],
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": ["es6", "dom", "es2016", "es2017"],
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "allowJs": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@forms/*": ["./src/components/forms*"],
      "@api/*": ["./src/api/*"],
      "@theme/*": ["./src/theme/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@services/*": ["./src/services/*"],
      "@constants/*": ["./src/constants/*"],
      "@context/*": ["./src/context/*"],
      "@queries/*": ["./src/queries/*"],
      "@data/*": ["./src/data/*"],
      "@typeDefs/*": ["./src/types/*"],
      "@generated/*": ["./src/generated/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*", "stories/DesktopHeader.stories.tsx"],
  "exclude": ["node_modules", "src/**/*.stories.js", ".stories/**/*"],
  "esModuleInterop": true
}
